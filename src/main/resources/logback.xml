<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%-5p %d{HH:mm:ss} [%t][%C{1}] [%X{demande}] %m%n</pattern>
		</encoder>
	</appender>

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>uh2c-registry.log</File>
		<Append>false</Append>

		<encoder>
			<pattern>%d{dd/MM/YY HH:mm:ss} %-5p [%t][%C{1}] [%X{demande}] %m%n
			</pattern>
		</encoder>

		<rollingPolicy
			class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<maxIndex>10</maxIndex>
			<FileNamePattern>uh2c-registry.log.%i</FileNamePattern>
		</rollingPolicy>

		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>20000KB</MaxFileSize>
		</triggeringPolicy>
	</appender>

	<!-- ################################################################### -->
	<!-- ##################### Logger ###################################### -->
	<!-- ################################################################### -->
	<logger name="org.springframework" level="ERROR">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</logger>

	<logger name="org.hibernate" level="ERROR">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</logger>

	<logger name="org.apache.cxf" level="ERROR" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</logger>

	<logger name="org.apache.cxf.interceptor" level="INFO"
		additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</logger>
	
	<!-- ################################################################### -->
	<!-- ##################### Profil Spring################################ -->
	<!-- ################################################################### -->
	<springProfile name="dev">
		<root level="INFO">
			<appender-ref ref="FILE" />
			<appender-ref ref="STDOUT" />
		</root>
	</springProfile>

	<springProfile name="cloud">
		<root level="INFO">
			<appender-ref ref="STDOUT" />
		</root>
	</springProfile>
	
	<springProfile name="docker">
		<root level="INFO">
		<appender-ref ref="FILE" />
		</root>
	</springProfile>
</configuration>
